{% extends 'template/base.twig' %}
{% set title = 'Hjem' %}
{% block content %}
    <div class="center-text">
        {% if online %}
            <h1>TerminLister<a href="/logout" style="text-decoration: none; color: #000000;">.</a></h1>
        {% else %}
            <h1>TerminLister<a href="/login" style="text-decoration: none; color: #000000;">.</a></h1>
        {% endif %}

    </div>
    {% if online %}
        {% include 'online.twig' %}
    {% endif %}

    <section class="timeline">
        <div class="center-text"><button id="passed" class="btnPassed">Vis mer</button></div>
        <div id="timeline" class="container">

            {% for r in row %}

            <div id="pass" class="timeline-item timeit" data-end="{{ r.date_end.format('Y-m-d') }} {{ r.time_end|date('H:i') }}">
                <div class="timeline-img"></div>
                <div class=" {{ loop.index % 2 != 0 ? 'timeline-content js--fadeInLeft' : 'timeline-content timeline-card js--fadeInRight' }}">
                    {% if r.date_start  ==  r.date_end  %}
                        <h2 class=""> {{ r.date_start.formatLocalized('%d %B %Y') }}</h2>
                    {% else %}
                        <h2 class=""> {{ r.date_start.formatLocalized('%d %B %Y') }} / {{ r.date_end.formatLocalized('%d %B %Y') }}</h2>
                    {% endif %}
                    <h4 class="time">{{ r.time_start|date('H:i') }} - {{ r.time_end|date('H:i') }}</h4>
                    <p>{{ r.event_description }}</p>
                </div>
            </div>

            {% endfor %}
            </div>


    </section>

{% endblock %}
{% block styles %}

  <link rel="stylesheet" href="/css/table.css">

{% endblock %}
{% block scripts %}

    <script src="https://unpkg.com/scrollreveal@3.3.2/dist/scrollreveal.min.js"></script>
    <script src="/js/date.js"></script>
    <script src="/js/modal.js"></script>
    <script src="/js/timeline.js"></script>
    <script src="/js/timeit.js"></script>


{% endblock %}